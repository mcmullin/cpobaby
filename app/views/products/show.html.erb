<% provide(:title, "Product ##{@product.item_number}") %>

<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h2>
        Product #<%= "#{@product.item_number}" %> 
        <%= link_to "Edit", edit_product_path(@product), class: 'btn btn-default pull-right' %>
      </h2>
    </div>

    <table id="products" class="table table-striped table-bordered">
      <tr class="active">
        <th>Item Number</th>
        <th>Description</th>
        <th>Category</th>
        <th>Retail Price</th>
        <th>CPO</th>
        <th>Point Value</th>
        <% if can? :manage, @product %>
          <th colspan="2"></th>
        <% end %>
      </tr>
      <%= render @product %>
    </table>

    <%= link_to 'back to Products', products_path %>
  </div>
</div>