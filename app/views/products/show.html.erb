<% provide(:title, "Showing Product ##{@product.item_number}") %>

<h2>Showing Product #<%= "#{@product.item_number}" %></h2>

<table id="products" class="table table-striped table-bordered">
  <tr>
    <% if can? :manage, @product %>
      <th>(admin)</th>
    <% end %>
    <th>Item Number</th>
    <th>Description</th>
    <th>Category</th>
    <th>Retail Price</th>
    <th>CPO</th>
    <th>Point Value</th>
  </tr>
  <%= render @product %>
</table>

<%= link_to "Edit Product ##{@product.item_number}", edit_product_path(@product) %> |
<%= link_to 'back to All Products', products_path %>