<% provide(:title, "Products") %> 

<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h2>Products <%= link_to 'New Product', new_product_path, class: 'btn btn-default pull-right' if can? :manage, @product %></h2>
    </div>

    <% if can? :manage, @product %>
      <div>
        <%= form_tag import_products_path, multipart: true do %>
          <%= file_field_tag :file %>
            <%= submit_tag "Import Products" %>
        <% end %>
      </div>
      <br />
      <p>Download list as <%= link_to ".csv", products_path(format: "csv") %></p>
    <% end %>

    <table id="products" class="table table-striped table-bordered">
      <tr>
        <th>Item Number</th>
        <th>Description</th>
        <th>Category</th>
        <th>Retail Price</th>
        <th>CPO</th>
        <th>Point Value</th>
        <% if can? :manage, @product %>
          <th colspan="3"></th>
        <% end %>
      </tr>
      <% @products.sort_by(&:position).each do |product| %>
        <%= render 'product', product: product %>
      <% end %>
    </table>
  </div>
</div>
