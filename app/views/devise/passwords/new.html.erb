<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
    <div class="page-header">
      <h2>Forgot your password?</h2>
    </div>
  </div>
  <div class="col-lg-4 col-lg-offset-2">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name),
                                  html: { method: :post, class: 'well' } ) do |f| %>
      <%= f.error_notification %>
      <fieldset>
        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Send me reset password instructions", class: 'btn btn-primary' %>
        </div>
      </fieldset>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <div class="col-lg-4 bs-masthead">
    <p class="lead">How embarrassing.</p>
  </div>
</div>
