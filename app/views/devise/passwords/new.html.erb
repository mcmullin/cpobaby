<div class='page-header'>
  <h2>Forgot your password?</h2>
</div>

<div class='col-lg-6'>
  <div class='row'>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name),
                                  html: { method: :post, class: 'well' } ) do |f| %>
      <%= f.error_notification %>
      <fieldset>
        <div class='form-inputs'>
          <%= f.input :email, autofocus: true %>
        </div>
        <div class='form-actions'>
          <%= f.button :submit, 'Send me reset password instructions', class: 'btn btn-primary' %>
        </div>
      </fieldset>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>

<div class='col-lg-6 bs-masthead'>
  <p class='lead'>How embarrassing.</p>
</div>
