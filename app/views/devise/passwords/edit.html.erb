<div class='page-header'>
  <h2>Change your password</h2>
</div>

<div class='col-lg-6'>
  <div class='row'>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), 
                        html: { method: :put, class: 'well' }) do |f| %>
      <%= f.error_notification %>
      
      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>
      <fieldset>
        <div class='form-inputs'>
          <%= f.input :password, label: 'New password', required: true, autofocus: true %>
          <%= f.input :password_confirmation, label: 'Confirm your new password', required: true %>
        </div>
        <div class='form-actions'>
          <%= f.button :submit, 'Change my password', class: 'btn btn-primary' %>
        </div>
      </fieldset>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>

<div class='col-lg-6 bs-masthead'>
  <p class='lead'>Please choose a secure password. "password" is not a secure password.</p>
</div>
