<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
    <div class="page-header">
      <h2>Sign up</h2>
    </div>
  </div>
  <div class="col-lg-4 col-lg-offset-2">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), 
                        html: { class: 'well' } ) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <fieldset>
        <div class="form-inputs">
          <%= f.input :number, autofocus: true, label: 'Rep number', 
                               hint: 'Careful! You will not be able to change this.' %>
          <%= f.input :number_confirmation %>
          <%= f.input :first_name, required: false %>
          <%= f.input :last_name, required: false %>
          <%= f.input :email %>
          <%= f.input :password %>
          <%= f.input :password_confirmation, hint: 'All fields are required.' %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
        </div>
      </fieldset>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <div class="col-lg-4 bs-masthead">
    <p class="lead">Welcome to the good life.</p>
  </div>
</div>
