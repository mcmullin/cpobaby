<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
    <div class="page-header">
      <h2>Sign up</h2>
    </div>
  </div>
  <div class="col-lg-4 col-lg-offset-2">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), 
                        html: { class: 'well' }, defaults: { wrapper_html: { class: 'form-group' } } ) do |f| %>
      <%= f.error_notification %>
      <fieldset>
        <div class="form-inputs">
          <%= f.input :number, label: 'Rep number', hint: 'Careful! You will not be able to change this.', required: true %>
          <%= f.input :first_name, required: true, autofocus: true %>
          <%= f.input :last_name, required: true %>
          <%= f.input :email, required: true %>
          <%= f.input :password, required: true %>
          <%= f.input :password_confirmation, required: true %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
        </div>
      </fieldset>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <div class="col-lg-4 bs-masthead">
    <p class="lead">Welcome to the good life.</p>
  </div>
</div>
