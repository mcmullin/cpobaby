<div class="row">
  <div class="col-lg-4 col-offset-2">
    <h2>Sign in</h2>
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), 
                        html: { class: 'form-horizontal well' } ) do |f| %>
      <fieldset>
        <div class="form-inputs">
          <%= f.input :email, :required => false, :autofocus => true %>
          <%= f.input :password, :required => false %>
          <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Sign in", class: 'btn btn-default' %>
        </div>
      </fieldset>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <div class="col-lg-4 bs-masthead">
    <p class="lead">It's secure.</p>
  </div>
</div>
