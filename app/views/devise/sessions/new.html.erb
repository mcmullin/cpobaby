<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
    <div class="page-header">
      <h2>Sign in</h2>
    </div>
  </div>
  <div class="col-lg-4 col-lg-offset-2">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), 
                        html: { class: 'well' } ) do |f| %>
      <%= f.error_notification %>
      <fieldset>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, label: false, inline_label: true, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Sign in", class: 'btn btn-primary' %>
        </div>
      </fieldset>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <div class="col-lg-4 bs-masthead">
    <p class="lead">60% of the time, it's secure... every time.</p>
  </div>
</div>
