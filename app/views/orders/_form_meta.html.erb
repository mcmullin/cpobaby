<div class="row">
  <div class="col-lg-2">
    <%= f.input :number, label: 'Order #', required: true, hint: "can't be changed", 
                         disabled: (controller.action_name == 'edit' || controller.action_name == 'update') %>
  </div>
  <div class="col-lg-2">
    <%= f.input :number_confirmation, label: 'Confirm Order #', 
                                      input_html: { value: (f.object.number_confirmation || f.object.number || '') } %>
  </div>
  <div class="col-lg-4">
    <%= f.input :date, label: 'Order Date', 
                       as: :date, start_year: 1949, end_year: Date.today.year + 1, order: [:day, :month, :year] %>
  </div>
  <div class="col-lg-2">
    <p><strong>Office #</strong></p>
    <p>number</p>
  </div>
  <div class="col-lg-2">
    <% if rep_signed_in? %>
      <%= f.input :rep_number, label: 'Rep #', disabled: true,
                               input_html: { value: current_rep.number } %>
    <% elsif admin_signed_in? %>
      <%= f.input :rep_number, label: 'Rep #', required: true,
                               url: autocomplete_rep_number_orders_path, as: :autocomplete %>
    <% end %>
  </div>
</div>