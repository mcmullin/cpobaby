<% provide(:title, "Order ##{@order.number}") %>

<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h2>
        Order #<%= "#{@order.number}" %> <%= link_to "Edit", edit_order_path(@order), class: 'btn btn-default pull-right' %>
      </h2>
    </div>

    <p>
      <b>Date:</b>
      <%= @order.date %>
    </p>
    <p>
      <b>Office:</b>
      
    </p>
    <p>
      <b>Rep:</b>
      <%= @order.rep.number_and_full_name %>
    </p>

    <p>
      <b>Billing Address:</b>
      <address>
        <%= @order.billing_address.line1 %><br>
        <%= @order.billing_address.line2 %><br>
        <%= @order.billing_address.city %><br>
        <%= @order.billing_address.state %><br>
        <%= @order.billing_address.zip %>
      </address>
    </p>
    <p>
      <b>Shipping Address:</b>
      <address>
        <%= @order.shipping_address.line1 %><br>
        <%= @order.shipping_address.line2 %><br>
        <%= @order.shipping_address.city %><br>
        <%= @order.shipping_address.state %><br>
        <%= @order.shipping_address.zip %>
      </address>
    </p>

    <table id="line-items" class="table table-striped table-bordered">
      <tr>
        <th>Quantity</th>
        <th>Item Number</th>
        <th>Description</th>
        <th>X</th>
      </tr>
      <% for line_item in @order.line_items %>
        <tr>
          <td><%= line_item.quantity %></td>
          <td><%= line_item.product.item_number %></td>
          <td><%= line_item.product.description %></td>
          <td><%= "FREE" if line_item.free %></td>
        </tr>
      <% end %>
    </table>

    <%= link_to 'back to Orders', orders_path %>
  </div>
</div>
