<% provide(:title, "Orders") %> 

<div class="page-header">
  <h2>Orders <%= link_to 'New Order', new_order_path, class: 'btn btn-default pull-right' %></h2>
</div>

<table id="orders" class="table table-striped table-bordered">
  <tr class="active">
    <th>Number</th>
    <% if can? :read, @order %>
      <th>Office #</th>
      <th>Rep #</th>
    <% end %>
    <th>Date</th>
    <th>CPO</th>
    <th colspan="3"></th>
  </tr>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.number %></td>
      <% if can? :read, @order %>
        <td>number</td>
        <td><%= order.rep.number_and_full_name %></td>
      <% end %>
      <td><%= order.date %></td>
      <td>amount</td>
      <td><%= link_to 'Show', order %></td>
      <td><%= link_to 'Edit', edit_order_path(order) %></td>
      <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
